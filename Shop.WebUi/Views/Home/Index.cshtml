@model Shop.Core.ViewModels.ProductListViewModel
@{
    ViewBag.Title = "Index";
}

<h1>Products</h1>

<div class="col-md-2">

    <h4>Categories</h4>
    <div class="list-group">
        @Html.ActionLink("All", "Index", null, new { @class = Request["Category"] == null ? "list-group-item activ" : "list-group-item" })
        @foreach (var item in Model.ProductCategories)
        {
            @Html.ActionLink(item.Category, "Index", new { Category = item.Category }, new { @class = Request["Category"] == null ? "list-group-item activ" : "list-group-item" })
        }
    </div>

</div>
<div class="col-md-10">

    @foreach (var item in Model.Products)
    {
    <dic class="col-md-4" style="height:350px;padding:10px;margin:10px;border:solid thin solid">

        <div class="col-md-12">
            <img style="height:150px" src="~/Content/ProdImage/@item.Image" />

        </div>

        <div class="col-md-12">
            <strong>@Html.ActionLink(item.Name, "Details", new { id = item.Id })</strong>

        </div>
        <div class="col-md-12">
            <p>@item.Description</p>
        </div>
        <div class="col-md-12">
            <h4>@item.Price $ </h4>
        </div>

        <div class="col-md-12">

            <a href="/Achat/Ajouter/@item.Id" class=" btn btn-default">Add to Basket</a>

        </div>

    </dic>
    }



</div>
